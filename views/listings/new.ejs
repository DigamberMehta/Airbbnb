<% layout('/layouts/boilerplate.ejs') %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Create a new Listing</h3>
        <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" placeholder="Enter title" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a title.</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input name="listing[description]" type="text" placeholder="Description" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a description.</div>
            </div>

            
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input name="listing[image][url]" type="file" class="form-control">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a valid image URL.</div>
            </div>

            <div class="row">
                <div class="mb-3 col-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" type="number" placeholder="Enter price" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a valid price.</div>
                </div>

                <div class="mb-3 col-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" type="text" placeholder="Enter country" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a country.</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" type="text" placeholder="Enter location" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a location.</div>
            </div>

            <button class="btn add-btn">add</button>
            <br><br>
        </form>
    </div>
</div>